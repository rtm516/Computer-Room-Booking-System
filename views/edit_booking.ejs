<%- include("inc/header"); %>
<div class="container">
	<h2 style="margin-top:0;">Edit booking:</h2>
	<form id="editBookingForm">
		<div class="form-group">
			<label for="inputTeacher">Teacher</label>
			<select class="form-control" id="inputTeacher" name="teacher">
				<% for(var i=0; i<teachers.length; i++) { %>
					<% var teacher = teachers[i]; %>
					<option <% if (bookingInfo.teacherID == teacher.id) {%>selected="selected"<%} %> value="<%- teacher.id %>"><%- teacher.title %> <%- teacher.fName %> <%- teacher.lName %></option>
				<% } %>
			</select>
		</div>		
		<div class="form-group">
			<label for="inputSize">Class size</label>
			<input type="number" class="form-control" id="inputSize" placeholder="13" min="1" max="100" name="size" value="<%- bookingInfo.size %>">
		</div>
		<div class="form-group">
			<label for="inputRoom">Room</label>
			<select class="form-control" id="inputRoom" name="room">
				<% for(var i=0; i<rooms.length; i++) { %>
					<% var room = rooms[i]; %>
					<option <% if (bookingInfo.roomID == room.id) {%>selected="selected"<%} %> value="<%- room.id %>"><%- room.name %></option>
				<% } %>
			</select>
		</div>
		<div class="form-group">
			<label for="inputDate">Date</label>
			<input type="date" class="form-control" id="inputDate" name="date" min="<%- date.y %>-<%- date.m %>-<%- date.d %>" value="<%- bookingInfo.date.y %>-<%- bookingInfo.date.m %>-<%- bookingInfo.date.d %>">
		</div>
		<div class="form-group">
			<label for="inputLesson">Lesson</label>
			<select class="form-control" id="inputLesson" name="lesson">
				<option <% if (bookingInfo.lesson == 1) {%>selected="selected"<%} %> value="1">Period 1</option>
				<option <% if (bookingInfo.lesson == 2) {%>selected="selected"<%} %> value="2">Period 2</option>
				<option <% if (bookingInfo.lesson == 3) {%>selected="selected"<%} %> value="3">Period 3</option>
				<option <% if (bookingInfo.lesson == 4) {%>selected="selected"<%} %> value="4">Period 4</option>
				<option <% if (bookingInfo.lesson == 5) {%>selected="selected"<%} %> value="5">Period 5</option>
			</select>
		</div>
		<input type="hidden" name="id" value="<%- id %>">
		<span class="pull-right">
			<button id="submit" type="submit" class="btn btn-success"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button>
			&nbsp;
			<a class="btn btn-danger" href="/booking/<%- bookingInfo.id %>">Cancel</a>
		</span>
	</form>
</div>
<%- include("inc/footer"); %>