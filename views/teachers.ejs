<%- include("inc/header"); %>
<div class="container">
	<table class="table table-striped">
		<thead>
			<th>Title</th>
			<th>First name</th>
			<th>Last name</th>
			<% if (user.admin && user.admin == 1) { %>
			<th></th>
			<% } %>
		</thead>
		<tbody>
			<% for(var i=0; i<teachers.length; i++) { %>
				<% var teacher = teachers[i]; %>
				<tr>
					<td><%- teacher.title %></td>
					<td><%- teacher.fName %></td>
					<td><%- teacher.lName %></td>
					<% if (user.admin && user.admin == 1) { %>
					<td><a href="/edit/teacher/<%- teacher.id %>" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a></td>
					<% } %>
				</tr>
			<% } %>
		</tbody>
	</table>
	<% if (user.admin && user.admin == 1) { %>
	<br>
	<div class="pull-right">
		<% if (teachers.length > 1) { %>
			<a class="btn btn-danger" href="/remove/teacher">Remove teacher <i class="fa fa-minus-circle" aria-hidden="true"></i></a>
		<% } %>
		<a class="btn btn-success" href="/add/teacher">Add teacher <i class="fa fa-plus-circle" aria-hidden="true"></i></a>
	</div>
	<% } %>
</div>
<%- include("inc/footer"); %>